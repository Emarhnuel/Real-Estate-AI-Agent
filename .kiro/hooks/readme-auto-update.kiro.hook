{
  "enabled": true,
  "name": "README Auto-Updater",
  "description": "Monitors file changes across the codebase and automatically reviews them to determine if README.md needs updating. Focuses on significant changes like new features, API endpoints, configuration, setup steps, or architecture modifications.",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "api/**/*",
      "src/**/*",
      "frontend/**/*",
      "pages/**/*",
      "components/**/*",
      "requirements.txt",
      "pyproject.toml",
      ".env.example",
      "vercel.json"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A file has been modified: {{filePath}}\n\nReview the changes and update README.md if necessary. Focus on:\n- New features added\n- API endpoint changes\n- Setup/installation steps\n- Architecture changes\n\nOnly update README.md if the changes are significant enough to warrant documentation updates. Keep updates concise and relevant."
  }
}